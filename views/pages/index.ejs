<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <style>
        .respuesta{
            margin-top: 20px;
            display: inline-flex;
        }

        .respuesta div{
            margin-right: 20px;
            width: 125px;
            height: 125px;
        }

        .respuesta div.digitrue{
            background-color: green;
        }

        .respuesta div.digifalse{
            background-color: red;
        }

        .respuesta div img{
            width: 125px;
            height: 125px;
        }

        .respuesta div h3{
            text-align: center;
        }

    </style>
</head>
<body>
    <header>
        <a href="/digimon/"><h1>DigimonDLE</h1></a>
    </header>
    <main>
        <p>Adivina el Digimon de hoy</p>
        <form action="/digimon/buscar" method="post">
            <input type="text" id="nombre" name="nombre">
            <input type="submit">
            <ul id="myUL">
                <%= for(digimon of digimons) { %>
                    <li><%= digimon.nombre %></li>
                <% }%>
            </ul>
        </form>
        <div id="container">
            <% if(respuestas){ %>
                <% for(respuesta of respuestas) { %>
                    <div class="respuesta">
                        <div>
                            <img src="<%= respuesta[0].img %>" alt="digimon">
                        </div>
                        <div class="digi<%= respuesta[0].xAntibody %>">
                            <h3>X Antibody</h3>
                        </div>
                        <div class="digi<%= respuesta[0].level %>">
                            <h3>Nivel</h3>
                        </div>
                        <div class="digi<%= respuesta[0].type %>">
                            <h3>Tipo</h3>
                        </div>
                        <div class="digi<%= respuesta[0].atributo %>">
                            <h3>Atributo</h3>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </main>
</body>
<script>
    function myFunction() {
      // Declare variables
      var input, filter, ul, li, a, i, txtValue;
      input = document.getElementById('nombre');
      filter = input.value.toUpperCase();
      ul = document.getElementById("myUL");
      li = ul.getElementsByTagName('li');
    
      // Loop through all list items, and hide those who don't match the search query
      for (i = 0; i < li.length; i++) {
        a = li[i].getElementsByTagName("a")[0];
        txtValue = a.textContent || a.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          li[i].style.display = "";
        } else {
          li[i].style.display = "none";
        }
      }
    }
</script>
</html>