<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <style>
        .respuesta{
            margin-top: 20px;
            display: inline-flex;
        }

        .respuesta div{
            margin-right: 20px;
            width: 125px;
            height: 125px;
        }

        .respuesta div.digitrue{
            background-color: green;
        }

        .respuesta div.digifalse{
            background-color: red;
        }

        .respuesta div img{
            width: 125px;
            height: 125px;
        }

        .respuesta div h3{
            text-align: center;
        }

        #myUL {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

        #myUL li{
            border: 1px solid #000000;
            margin-top: -1px;
            background-color: #f6f6f6;
            padding: 5px;
            text-decoration: none;
            font-size: 12px;
            color: black;
            display: none;
            width: 20%;
        }

        #myUL li a:hover:not(.header) {
            background-color: #eee;
        }

    </style>
</head>
<body>
    <header>
        <a href="/digimon/"><h1>DigimonDLE</h1></a>
    </header>
    <main>
        <p>Adivina el Digimon de hoy</p>
        <form action="/digimon/buscar" method="post">
            <input type="text" id="nombre" name="nombre">
            <ul id="myUL">
                <% for(digimon of digimons) { %>
                    <li><%= digimon.nombre %></li>
                <% }%>
            </ul>
            <input type="submit">
        </form>
        <div id="container">
            <% if(respuestas){ %>
                <% for(respuesta of respuestas) { %>
                    <div class="respuesta">
                        <div>
                            <img src="<%= respuesta[0].img %>" alt="digimon">
                        </div>
                        <div class="digi<%= respuesta[0].xAntibody %>">
                            <h3>X Antibody</h3>
                        </div>
                        <div class="digi<%= respuesta[0].level %>">
                            <h3>Nivel</h3>
                        </div>
                        <div class="digi<%= respuesta[0].type %>">
                            <h3>Tipo</h3>
                        </div>
                        <div class="digi<%= respuesta[0].atributo %>">
                            <h3>Atributo</h3>
                        </div>
                    </div>
                <% } %>
            <% } %>
        </div>
        <div id="victory">
            <% if(victory){ %>
                <h1>Has ganado</h1>
                <input type="hidden" value="<%=victory%>" id="victory">
            <% } %>
        </div>
    </main>
</body>
<script>
    const input = document.getElementById('nombre');
    const ul = document.getElementById("myUL"); 

    input.addEventListener('input', myFunction);

    function myFunction() {
        console.log('lista');
        var filter, li, a, i, txtValue;
        filter = input.value.toUpperCase();
        li = ul.getElementsByTagName('li');
        ul.style.display = "block";
        let cont = 0;
    
        for (i = 0; i < li.length; i++) {
            txtValue = li[i].textContent;
            if (filter == '') {
                li[i].style.display = 'none';
            }else if(txtValue.toUpperCase().indexOf(filter) > -1){
                if(cont < 10){
                    li[i].style.display = "block";
                    cont++;
                }
            }else {
                li[i].style.display = "none";
            }

            li[i].addEventListener("click", function(e) {
                let value = e.target.textContent;
                input.value = value;
                e.target.style.display = 'none';
                e.target.innerHTML = '';
            });
        }
    }
</script>
</html>